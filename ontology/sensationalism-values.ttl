# Example 1: Evaluating wine tasting from sensationalist perspective
:WineTastingScenario a :Scenario ;
    :action "taste_fine_wine" ;
    :context [
        :aesthetic true ;
        :sensory true ;
        :cultivated true ;
        :immediate_experience true
    ] ;
    :sensationalistEvaluation [
        :judgment "highly_good" ;
        :reasoning "Wine tasting realizes core sensationalist values: refined sensory experience (gustatory and olfactory richness), aesthetic pleasure (harmony of flavors), cultivated taste (perceptual learning)" ;
        :relevantValues :SensoryExperience, :AestheticPleasure, :SensoryCultivation ;
        :empiricalSupport "Goldstone (1998): Wine experts show enhanced perceptual discrimination through training" ;
        :confidence 0.95
    ] .

# Example 2: Evaluating mathematical proof from sensationalist perspective
:MathematicalProofScenario a :Scenario ;
    :action "prove_theorem" ;
    :context [
        :abstract true ;
        :logical true ;
        :non_sensory true
    ] ;
    :sensationalistEvaluation [
        :judgment "neutral_to_low" ;
        :reasoning "Mathematical reasoning is abstract, lacks immediate sensory quality; valued only if experienced as elegant (aesthetic) or intellectually stimulating (novel ideas). Abstract concepts derivative from impressions via association, but mathematical abstraction highly remote from original sensory source." ;
        :relevantValues :AbstractReasoning ;
        :note "AbstractReasoning is subordinated in sensationalism" ;
        :conditionalValue "Positive IF proof has aesthetic elegance or provides intellectual stimulation" ;
        :conflicts "Abstract logic vs. immediate sensory experience" ;
        :confidence 0.7
    ] .

