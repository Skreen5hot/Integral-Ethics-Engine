:CharitableDonationScenario a :Scenario ;
    :action "donate_to_charity" ;
    :context [
        :moral true ;
        :abstract_consequences true ;
        :emotional_feeling true
    ] ;
    :sensationalistEvaluation [
        :judgment "neutral_to_positive" ;
        :reasoning "Valued primarily for warm emotional feeling (sensory quality of sympathetic pleasure), not for abstract moral duty or calculated utility. Hume's moral sentiments: morality grounded in feelings of approbation and sympathy." ;
        :relevantValues :PleasurableSensation, :MoralPrinciples ;
        :note "PleasurableSensation: emotional warmth via sympathy; MoralPrinciples: subordinated to feeling" ;
        :empiricalSupport "Hume (1751): Moral approval is a pleasant sentiment arising from sympathy" ;
        :confidence 0.6
    ] .

