# ============================================================================
# CORE ONTOLOGY: DOMAIN STRUCTURE
# ============================================================================

:Domain a owl:Class ;
    rdfs:subClassOf bfo:0000031 ;  # generically dependent continuant (ICE)
    dcterms:source "Walzer (1983): Domains as 'spheres of justice' with distinct distributive principles. MacIntyre (1981): Social practices with internal goods." ;
    rdfs:label "Domain of Human Activity" ;
    skos:definition "An information content entity representing a sphere of human activity characterized by distinctive purposes, practices, goods, and appropriate standards of evaluation." ;
    :hasProperty :DomainPurpose, :DomainPractices, :InternalGoods, :AppropriateCriteria ;
    :hasWorldviewWeightProfile :WorldviewWeightProfile ;
    rdfs:comment "Domains are not physical regions but conceptual spheres defined by purposes and practices. Different domains appropriately weight worldviews differently based on their purposes." .

:WorldviewWeightProfile a owl:Class ;
    rdfs:subClassOf bfo:0000031 ;  # ICE
    dcterms:source "Original IEE contribution: Systematic domain-worldview weighting prevents hidden elimination while enabling context-appropriateness" ;
    rdfs:label "Worldview Weight Profile" ;
    skos:definition "An ICE specifying the salience weight [0.0-1.0] for each worldview within a particular domain, based on alignment between worldview foundations and domain purposes." ;
    :hasProperty :WorldviewWeights ;
    :weightRange "0.0 (minimally relevant) to 1.0 (maximally relevant)" ;
    :interpretation [
        :high "0.8-1.0: Worldview highly relevant; core to domain purpose" ;
        :moderate "0.5-0.7: Worldview moderately relevant; supporting role" ;
        :low "0.3-0.4: Worldview weakly relevant; peripheral considerations" ;
        :minimal "0.0-0.2: Worldview minimally relevant; usually not applicable"
    ] ;
    rdfs:comment "Weights reflect domain appropriateness, NOT universal truth. A worldview with 0.3 weight in Domain X may have 0.9 weight in Domain Y." .

:WorldviewWeight a owl:Class ;
    rdfs:subClassOf bfo:0000019 ;  # quality
    rdfs:label "Worldview Weight" ;
    skos:definition "A quality specifying the degree of relevance [0.0-1.0] of a particular worldview within a specific domain." ;
    :inheres_in :WorldviewWeightProfile ;
    :hasWorldview :Worldview ;
    :hasWeightValue xsd:decimal ;
    rdfs:comment "Individual worldview-weight pair within a profile." .

:DomainContextualizationProcess a owl:Class ;
    rdfs:subClassOf bfo:0000015 ;  # process
    dcterms:source "Step 4 of value-conflict-resolution.ttl: Domain contextualization process" ;
    rdfs:label "Domain Contextualization Process" ;
    skos:definition "A BFO process of applying domain-specific worldview weights to adjust salience of competing value judgments based on domain appropriateness." ;
    bfo:0000057 :Agent ;  # has_participant
    cco:has_input :ValueJudgment, :Domain ;
    cco:has_output :ContextualizedValueJudgment ;
    :realizesStrategy :DomainContextualization ;  # from worldview-relationships.ttl
    :usedInStep :Step4_Contextualize ;  # from value-conflict-resolution.ttl
    rdfs:comment "This process implements Step 4 of the 7-step integration procedure by retrieving and applying domain-specific worldview weights." .

:ContextualizedValueJudgment a owl:Class ;
    rdfs:subClassOf bfo:0000031 ;  # ICE
    rdfs:label "Contextualized Value Judgment" ;
    skos:definition "A value judgment whose worldview sources have been weighted according to domain appropriateness." ;
    :generatedBy :DomainContextualizationProcess ;
    :derivedFrom :ValueJudgment, :WorldviewWeightProfile ;
    rdfs:comment "Output of domain contextualization; input to synthesis or prioritization steps." .

# ============================================================================
# DOMAIN 1: HEALTHCARE
# ============================================================================

:Healthcare a :Domain ;
    dcterms:source "Pellegrino & Thomasma (1981): Medicine's internal good is healing. Beauchamp & Childress (2019): Four principles of biomedical ethics." ;
    rdfs:label "Healthcare Domain" ;
    skos:definition "The domain of activities aimed at preventing, diagnosing, treating, and curing physical and mental illness and promoting bodily health." ;
    :domainPurpose "Physical and mental health restoration and maintenance" ;
    :internalGoods "Healing, pain relief, function restoration, life extension (when meaningful), patient autonomy" ;
    :primaryPractices "Diagnosis, treatment, surgery, medication, therapy, preventive care, palliative care" ;
    :appropriateCriteria "Clinical efficacy, patient safety, evidence-based practice, informed consent, beneficence, non-maleficence" ;
    :hasWorldviewWeightProfile :HealthcareWeightProfile ;
    :empiricalSupport [
        :study1 "Pellegrino & Thomasma (1981): Medicine as practice oriented toward physical healing" ;
        :study2 "Beauchamp & Childress (2019): Principlism in bioethics emphasizes autonomy, beneficence, non-maleficence, justice" ;
        :study3 "Engelhardt (1996): Secular bioethics must rely on shared material understanding of body/disease"
    ] ;
    rdfs:comment "Healthcare's primary focus on physical bodies and empirical effectiveness means materialism and realism have high relevance. But spiritual/psychological dimensions remain moderately relevant for holistic care." .

:HealthcareWeightProfile a :WorldviewWeightProfile ;
    rdfs:label "Healthcare Worldview Weight Profile" ;

    # High relevance (0.8-1.0): Core to healthcare purpose
    :worldviewWeight [
        :worldview :Materialism ;
        :weight 0.9 ;
        :rationale "Physical body is primary object of medical intervention; materialist understanding of physiology/pathology essential for clinical efficacy" ;
        :evidence "Modern medicine's success built on materialist physiology and pharmacology"
    ] ;

    :worldviewWeight [
        :worldview :Realism ;
        :weight 0.9 ;
        :rationale "Objective disease entities and evidence-based practice require realist epistemology; treatments must work independent of subjective belief" ;
        :evidence "Randomized controlled trials assume objective treatment effects (realism)"
    ] ;

    :worldviewWeight [
        :worldview :Monadism ;
        :weight 0.85 ;
        :rationale "Patient autonomy central to bioethics; informed consent respects individual's unique perspective and irreplaceable life" ;
        :evidence "Beauchamp & Childress (2019): Autonomy is first principle of biomedical ethics"
    ] ;

    # Moderate relevance (0.5-0.7): Supporting role
    :worldviewWeight [
        :worldview :Psychism ;
        :weight 0.65 ;
        :rationale "Mental health is health; psychological factors affect physical outcomes (psychosomatic medicine); depth psychology informs therapy" ;
        :evidence "Biopsychosocial model (Engel 1977) integrates psychological dimensions"
    ] ;

    :worldviewWeight [
        :worldview :Sensationalism ;
        :weight 0.6 ;
        :rationale "Pain and suffering are immediate sensory experiences with moral weight; patient's subjective experience matters for quality of life" ;
        :evidence "Pain management and quality-of-life measures prioritize experiential dimensions"
    ] ;

    :worldviewWeight [
        :worldview :Pneumatism ;
        :weight 0.5 ;
        :rationale "Holistic care recognizes spiritual vitality as health factor; sacred dimension of healing for many patients" ;
        :evidence "Chaplaincy services and spiritual care increasingly recognized in hospitals"
    ] ;

    :worldviewWeight [
        :worldview :Spiritualism ;
        :weight 0.45 ;
        :rationale "For many patients, spiritual beliefs affect treatment decisions (refusal of blood transfusion, end-of-life care); respect required" ;
        :evidence "Religious exemptions and spiritual care protocols in medical ethics"
    ] ;

    # Low relevance (0.3-0.4): Peripheral
    :worldviewWeight [
        :worldview :Idealism ;
        :weight 0.4 ;
        :rationale "Patient's meaning-making and narrative identity relevant in long-term illness and chronic care" ;
        :evidence "Narrative medicine (Charon 2006) incorporates patient's life story"
    ] ;

    :worldviewWeight [
        :worldview :Rationalism ;
        :weight 0.4 ;
        :rationale "Systematic diagnostic reasoning and clinical algorithms use logical coherence" ;
        :evidence "Clinical decision support systems and diagnostic protocols"
    ] ;

    :worldviewWeight [
        :worldview :Phenomenalism ;
        :weight 0.35 ;
        :rationale "Patient's phenomenological experience of illness informs diagnosis and treatment goals" ;
        :evidence "Patient-reported outcomes and phenomenological research in nursing"
    ] ;

    # Minimal relevance (0.0-0.2): Usually not applicable
    :worldviewWeight [
        :worldview :Mathematism ;
        :weight 0.3 ;
        :rationale "Biostatistics and epidemiology use mathematical models, but formal beauty is not clinical criterion" ;
        :evidence "Evidence-based medicine uses statistics instrumentally, not as ultimate value"
    ] ;

    :worldviewWeight [
        :worldview :Dynamism ;
        :weight 0.35 ;
        :rationale "Growth and transformation relevant in rehabilitation and recovery processes" ;
        :evidence "Rehabilitation medicine focuses on functional restoration and adaptation"
    ] ;

    :criticalNote "High materialist/realist weights do NOT mean spiritualism is FALSE, only that physical healing is healthcare's primary purpose. Spiritual care remains important for holistic treatment." ;
    rdfs:comment "Healthcare weights reflect domain purpose (physical healing), not universal truth claims about reality." .

# ============================================================================
# DOMAIN 2: SPIRITUAL FORMATION
# ============================================================================

:SpiritualFormation a :Domain ;
    dcterms:source "Willard (1988): Spiritual formation as transformation into Christlikeness. Foster (1978): Spiritual disciplines. Palmer (2000): Vocation as listening to divine call." ;
    rdfs:label "Spiritual Formation Domain" ;
    skos:definition "The domain of practices aimed at deepening relationship with the divine, transcendent growth, and spiritual maturity." ;
    :domainPurpose "Spiritual maturity, divine relationship, transcendent awareness, sacred transformation" ;
    :internalGoods "Holiness, contemplation, divine union, spiritual wisdom, compassion, humility, sacred presence" ;
    :primaryPractices "Prayer, meditation, worship, scripture study, fasting, solitude, service, confession, spiritual direction" ;
    :appropriateCriteria "Spiritual depth, divine alignment, transformation of character, fruits of the spirit, contemplative capacity" ;
    :hasWorldviewWeightProfile :SpiritualFormationWeightProfile ;
    :empiricalSupport [
        :study1 "Willard (1988): Spiritual formation requires cultivation of spiritual disciplines" ;
        :study2 "Foster (1978): Inward, outward, and corporate disciplines for spiritual growth" ;
        :study3 "Merton (1961): Contemplative practice as path to union with God"
    ] ;
    rdfs:comment "Spiritual formation's transcendent purpose means spiritualism, idealism, and pneumatism have high relevance. Materialism is subordinated but not eliminated (embodied practices matter)." .

:SpiritualFormationWeightProfile a :WorldviewWeightProfile ;
    rdfs:label "Spiritual Formation Worldview Weight Profile" ;

    # High relevance (0.8-1.0): Core to spiritual formation
    :worldviewWeight [
        :worldview :Spiritualism ;
        :weight 0.95 ;
        :rationale "Transcendent relationship with divine is THE purpose; revealed truth and sacred tradition guide formation" ;
        :evidence "All major religious traditions prioritize transcendent relationship and divine will"
    ] ;

    :worldviewWeight [
        :worldview :Idealism ;
        :weight 0.9 ;
        :rationale "Consciousness development and meaning-making central to spiritual growth; ideas and beliefs shape spiritual life" ;
        :evidence "Bildung (spiritual-intellectual formation) tradition in Christianity and Buddhism"
    ] ;

    :worldviewWeight [
        :worldview :Pneumatism ;
        :weight 0.9 ;
        :rationale "Immanent divine presence pervades practices; Spirit/pneuma animates spiritual life and guides transformation" ;
        :evidence "Charismatic and contemplative traditions emphasize indwelling Spirit"
    ] ;

    :worldviewWeight [
        :worldview :Dynamism ;
        :weight 0.8 ;
        :rationale "Spiritual formation is inherently dynamic; growth, transformation, and ongoing conversion essential" ;
        :evidence "Developmental stage models in spiritual formation (Fowler, Wilber, Cook-Greuter)"
    ] ;

    # Moderate relevance (0.5-0.7): Supporting role
    :worldviewWeight [
        :worldview :Psychism ;
        :weight 0.75 ;
        :rationale "Psychological depth and shadow integration necessary for authentic spiritual growth; self-knowledge prevents spiritual bypassing" ;
        :evidence "Jung's integration of psychology and spirituality; spiritual direction addresses psychological blocks"
    ] ;

    :worldviewWeight [
        :worldview :Monadism ;
        :weight 0.7 ;
        :rationale "Individual uniqueness means each person's spiritual path is distinctive; authentic vocation requires self-knowledge" ;
        :evidence "Palmer (2000): 'Let your life speak' - listening for unique calling"
    ] ;

    :worldviewWeight [
        :worldview :Rationalism ;
        :weight 0.6 ;
        :rationale "Systematic theology and doctrinal coherence matter; reason serves faith (fides quaerens intellectum)" ;
        :evidence "Scholastic tradition, systematic theology, Anselm's 'faith seeking understanding'"
    ] ;

    :worldviewWeight [
        :worldview :Mathematism ;
        :weight 0.55 ;
        :rationale "Sacred geometry and numerical symbolism in mystical traditions; divine order reflected in proportion" ;
        :evidence "Sacred architecture (cathedrals), mandala symbolism, Pythagorean mysticism"
    ] ;

    # Low relevance (0.3-0.4): Peripheral
    :worldviewWeight [
        :worldview :Sensationalism ;
        :weight 0.45 ;
        :rationale "Aesthetic beauty in worship and sacred art can facilitate spiritual experience; but immediacy can distract from transcendence" ;
        :evidence "Liturgical beauty and iconography in Orthodox and Catholic traditions"
    ] ;

    :worldviewWeight [
        :worldview :Realism ;
        :weight 0.4 ;
        :rationale "Objective moral truths provide stability; but spiritual formation transcends purely objective frameworks" ;
        :evidence "Natural law tradition provides objective moral foundation"
    ] ;

    :worldviewWeight [
        :worldview :Phenomenalism ;
        :weight 0.4 ;
        :rationale "Phenomenological description of spiritual experience has value; but validity depends on transcendent reference" ;
        :evidence "William James' *Varieties of Religious Experience* uses phenomenological method"
    ] ;

    # Minimal relevance (0.0-0.2): Usually subordinated
    :worldviewWeight [
        :worldview :Materialism ;
        :weight 0.3 ;
        :rationale "Physical disciplines (fasting, posture, liturgical movement) are important embodied practices, but material is not primary focus" ;
        :evidence "Ascetic practices and embodied spirituality (yoga, liturgical dance)"
    ] ;

    :criticalNote "Low materialist weight does NOT mean body is unimportant (incarnational theology!), only that spiritual formation's purpose is transcendent relationship, not physical outcomes." ;
    rdfs:comment "Spiritual formation weights reflect transcendent purpose. Materialism subordinated but embodied practices still valued." .

# ============================================================================
# DOMAIN 3: EDUCATION
# ============================================================================

:Education a :Domain ;
    dcterms:source "Dewey (1916): Education as growth and democratic participation. Noddings (2013): Caring relation in education. Nussbaum (1997): Cultivating humanity through liberal arts." ;
    rdfs:label "Education Domain" ;
    skos:definition "The domain of practices aimed at developing knowledge, skills, character, and capacities for thought, citizenship, and flourishing." ;
    :domainPurpose "Intellectual development, character formation, critical thinking, democratic citizenship, human flourishing" ;
    :internalGoods "Understanding, wisdom, curiosity, critical thought, creativity, moral character, civic virtue" ;
    :primaryPractices "Teaching, learning, mentoring, inquiry, dialogue, assessment, curriculum design, modeling" ;
    :appropriateCriteria "Learning outcomes, intellectual growth, character development, civic preparation, critical thinking capacity" ;
    :hasWorldviewWeightProfile :EducationWeightProfile ;
    :empiricalSupport [
        :study1 "Dewey (1916): Education as reconstruction of experience for growth and democratic life" ;
        :study2 "Noddings (2013): Caring relationships are foundation of educational success" ;
        :study3 "Nussbaum (1997): Liberal education cultivates critical thinking and empathy"
    ] ;
    rdfs:comment "Education's focus on consciousness development and growth means idealism, rationalism, and dynamism have high relevance. Balance needed between objective knowledge and individual development." .

:EducationWeightProfile a :WorldviewWeightProfile ;
    rdfs:label "Education Worldview Weight Profile" ;

    # High relevance (0.8-1.0): Core to educational purpose
    :worldviewWeight [
        :worldview :Idealism ;
        :weight 0.9 ;
        :rationale "Education is fundamentally about consciousness development, meaning-making, and ideas shaping reality; Bildung tradition" ;
        :evidence "Liberal arts tradition emphasizes cultivation of mind and character (Bildung)"
    ] ;

    :worldviewWeight [
        :worldview :Rationalism ;
        :weight 0.85 ;
        :rationale "Logical coherence, systematic reasoning, and universal principles central to intellectual development and critical thinking" ;
        :evidence "Logic, mathematics, and scientific reasoning core to curriculum"
    ] ;

    :worldviewWeight [
        :worldview :Dynamism ;
        :weight 0.85 ;
        :rationale "Learning is inherently developmental; growth mindset and transformation central to educational philosophy" ;
        :evidence "Dewey (1916): Education as growth. Piaget's developmental stages. Growth mindset (Dweck)"
    ] ;

    :worldviewWeight [
        :worldview :Monadism ;
        :weight 0.8 ;
        :rationale "Each student is unique individual with distinctive talents, learning styles, and developmental trajectory" ;
        :evidence "Individualized education plans, multiple intelligences (Gardner), personalized learning"
    ] ;

    # Moderate relevance (0.5-0.7): Supporting role
    :worldviewWeight [
        :worldview :Realism ;
        :weight 0.7 ;
        :rationale "Objective knowledge and truth exist to be learned; science education requires realist epistemology" ;
        :evidence "STEM education assumes objective natural laws and empirical facts"
    ] ;

    :worldviewWeight [
        :worldview :Psychism ;
        :weight 0.65 ;
        :rationale "Emotional intelligence, self-awareness, and psychological health affect learning; socio-emotional learning important" ;
        :evidence "Social-emotional learning (SEL) curricula and trauma-informed teaching"
    ] ;

    :worldviewWeight [
        :worldview :Mathematism ;
        :weight 0.65 ;
        :rationale "Mathematical reasoning and formal structures central to intellectual development; beauty of mathematical truth" ;
        :evidence "Mathematics as core subject; problem-solving and logical structure training"
    ] ;

    :worldviewWeight [
        :worldview :Sensationalism ;
        :weight 0.6 ;
        :rationale "Experiential learning and hands-on experience facilitate understanding; aesthetic education important" ;
        :evidence "Experiential education (Kolb), arts education, laboratory science"
    ] ;

    # Low relevance (0.3-0.4): Peripheral
    :worldviewWeight [
        :worldview :Materialism ;
        :weight 0.5 ;
        :rationale "Physical resources and embodied cognition matter, but education's purpose is intellectual/character development beyond material" ;
        :evidence "School facilities and nutrition programs support learning but aren't primary purpose"
    ] ;

    :worldviewWeight [
        :worldview :Pneumatism ;
        :weight 0.45 ;
        :rationale "Holistic education recognizes spiritual dimension; some educational philosophies emphasize soul cultivation" ;
        :evidence "Waldorf education and contemplative pedagogy include spiritual dimensions"
    ] ;

    :worldviewWeight [
        :worldview :Spiritualism ;
        :weight 0.4 ;
        :rationale "Religious education in faith-based schools; moral education often has spiritual grounding; but secular education minimizes" ;
        :evidence "Faith-based schools integrate spiritual formation; public schools separate church and state"
    ] ;

    :worldviewWeight [
        :worldview :Phenomenalism ;
        :weight 0.45 ;
        :rationale "Student's subjective experience and perspective-taking important for engaged learning" ;
        :evidence "Constructivist pedagogy values student's prior knowledge and experience"
    ] ;

    :criticalNote "Education weights balance objective knowledge (realism, rationalism) with individual development (monadism, dynamism, idealism). Context varies: faith-based schools weight spiritualism higher." ;
    rdfs:comment "Education domain emphasizes consciousness development (idealism) and growth (dynamism) while maintaining commitment to objective knowledge (realism, rationalism)." .

# ============================================================================
# DOMAIN 4: VOCATIONAL CHOICE (CAREER/CALLING)
# ============================================================================

:VocationalChoice a :Domain ;
    dcterms:source "Palmer (2000): Vocation as listening for voice of true self. Buechner: 'Where deep gladness meets world's deep need.' Weber: Calling (Beruf) as Protestant work ethic." ;
    rdfs:label "Vocational Choice Domain" ;
    skos:definition "The domain of decisions about life work, career path, and calling - how one contributes to world through work." ;
    :domainPurpose "Authentic self-expression through work, meaningful contribution, alignment of gifts with world needs, fulfillment" ;
    :internalGoods "Meaningful work, self-expression, contribution to common good, using gifts, economic security, excellence in craft" ;
    :primaryPractices "Discernment, self-reflection, exploration, skill development, mentorship, risk-taking, persistence" ;
    :appropriateCriteria "Authentic alignment with self, meaningful contribution, sustainable livelihood, personal fulfillment, social value" ;
    :hasWorldviewWeightProfile :VocationalChoiceWeightProfile ;
    :empiricalSupport [
        :study1 "Palmer (2000): Vocation requires listening to inner voice (monadism) and responding to world's need" ;
        :study2 "Dik & Duffy (2009): Calling predicts career satisfaction and life meaning" ;
        :study3 "Wrzesniewski et al. (1997): Job vs. career vs. calling orientations predict wellbeing"
    ] ;
